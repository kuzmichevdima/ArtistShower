<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/main_artist_small_cover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="2"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            >

            <TextView
                style="@style/NameTextView"
                android:id="@+id/main_artist_name"
                android:layout_alignParentTop="true"/>

            <TextView
                style="@style/DefaultTextView"
                android:id="@+id/main_artist_genres"
                android:layout_below="@id/main_artist_name"/>

            <TextView
                style="@style/DefaultTextView"
                android:id="@+id/main_artist_statistics"
                android:layout_below="@id/main_artist_genres"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>